<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your books</p>
{{#if reviews}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each reviews}}
                <tr>
                    <td><a href="/reviews/{{_id}}">{{title}}</a></td>
                    <td><a href="/reviews/{{_id}}"></a>{{author}}</td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any reviews</p>
{{/if}}